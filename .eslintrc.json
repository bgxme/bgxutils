{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": 0,
        "indent": ["error", 4],
        "no-console": 0,
        "no-param-reassign": 0,
        "comma-dangle": ["error", "never"],
        "max-len": ["error", { "code": 120 }],
        "object-shorthand": 0,
        "no-lonely-if": 0,
        "quote-props": 0,
        "linebreak-style": 0,
        "consistent-return": 0,
        "prefer-destructuring": ["error", {"object": true, "array": false}]
    }
}